    <script>
        // Helper function to wrap long labels for Chart.js
        const wrapText = (text, maxLength = 16) => {
            if (text.length <= maxLength) {
                return text;
            }
            const words = text.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxLength && currentLine !== '') {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        };

        // Tooltip and legend callback for Chart.js to ensure white text
        const chartOptionsCallbacks = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                },
                legend: {
                    labels: {
                        color: 'white' // Set legend text color to white
                    }
                }
            },
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    ticks: { color: 'white' }, // Set x-axis tick color to white
                    grid: { color: 'rgba(255, 255, 255, 0.1)' } // Light grid lines
                },
                y: {
                    ticks: { color: 'white' }, // Set y-axis tick color to white
                    grid: { color: 'rgba(255, 255, 255, 0.1)' } // Light grid lines
                }
            }
        };

        // Data for "Landing Page Development" doughnut chart
        const landingPageData = {
            labels: ['Strategic Planning', 'Design & Development', 'Mobile Optimization', 'Content Integration'].map(l => wrapText(l, 25)),
            datasets: [{
                label: 'Project Focus Areas',
                data: [25, 45, 20, 10], // Illustrative allocation of effort
                backgroundColor: ['#FF6B6B', '#FFD166', '#06D6A0', '#FFFFFF'],
                borderColor: '#073B4C', // Border color matching background
                borderWidth: 4,
                hoverOffset: 4
            }]
        };
        new Chart(document.getElementById('landingPageChart'), {
            type: 'doughnut',
            data: landingPageData,
            options: {
                ...chartOptionsCallbacks,
                cutout: '60%', // Size of the doughnut hole
                scales: { // Remove scales for doughnut chart
                    x: { display: false },
                    y: { display: false }
                }
            }
        });

        // Data for "Social Media Management" bar chart
        const socialMediaData = {
            labels: ['Content Creation', 'Community Engagement', 'Performance Tracking'].map(l => wrapText(l)),
            datasets: [{
                label: 'Monthly Focus (Illustrative)',
                data: [50, 25, 25], // Illustrative time/effort allocation
                backgroundColor: ['#FFD166', '#FFE399', '#06D6A0'],
                borderColor: '#073B4C',
                borderWidth: 2,
                borderRadius: 5
            }]
        };
        new Chart(document.getElementById('socialMediaChart'), {
            type: 'bar',
            data: socialMediaData,
            options: {
                ...chartOptionsCallbacks,
                indexAxis: 'y', // Horizontal bars
                scales: {
                    x: {
                        ticks: { color: 'white' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    },
                    y: {
                        ticks: { color: 'white' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                }
            }
        });
    </script>
