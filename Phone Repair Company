    <script>
        // Helper function to wrap long labels for Chart.js
        const wrapText = (text, maxLength = 16) => {
            if (text.length <= maxLength) {
                return text;
            }
            const words = text.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxLength && currentLine !== '') {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        };

        // Tooltip and legend callback for Chart.js to ensure white text
        const chartOptionsCallbacks = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                },
                legend: {
                    labels: {
                        color: 'white' // Set legend text color to white
                    }
                }
            },
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    ticks: { color: 'white' }, // Set x-axis tick color to white
                    grid: { color: 'rgba(255, 255, 255, 0.1)' } // Light grid lines
                },
                y: {
                    ticks: { color: 'white' }, // Set y-axis tick color to white
                    grid: { color: 'rgba(255, 255, 255, 0.1)' } // Light grid lines
                }
            }
        };

        // Data for the "Our Strategic Approach" doughnut chart
        const approachData = {
            labels: ['Web Optimization', 'Paid Ads', 'Time Management', 'Content & Engagement'].map(l => wrapText(l, 25)),
            datasets: [{
                label: 'Strategic Focus Areas',
                data: [30, 30, 20, 20], // Illustrative allocation of effort
                backgroundColor: ['#FF6B6B', '#FFD166', '#06D6A0', '#FFFFFF'],
                borderColor: '#073B4C', // Border color matching background
                borderWidth: 4,
                hoverOffset: 4
            }]
        };
        new Chart(document.getElementById('approachChart'), {
            type: 'doughnut',
            data: approachData,
            options: {
                ...chartOptionsCallbacks,
                cutout: '60%', // Size of the doughnut hole
                scales: { // Remove scales for doughnut chart
                    x: { display: false },
                    y: { display: false }
                }
            }
        });

        // Data for "Website Optimization & Conversion" bar chart
        const websiteConversionData = {
            labels: ['Website Conversion Rate Increase', 'Online Appointment Bookings Increase'].map(l => wrapText(l)),
            datasets: [{
                label: 'Percentage Increase (Illustrative)',
                data: [45, 60], // Illustrative percentage increases
                backgroundColor: '#FF6B6B',
                borderColor: '#FF8A8A',
                borderWidth: 2,
                borderRadius: 5
            }]
        };
        new Chart(document.getElementById('websiteConversionChart'), {
            type: 'bar',
            data: websiteConversionData,
            options: {
                ...chartOptionsCallbacks,
                indexAxis: 'y', // Horizontal bars
                scales: {
                    x: {
                        ticks: { color: 'white', callback: function(value) { return value + '%'; } },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    },
                    y: {
                        ticks: { color: 'white' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                }
            }
        });
        
        // Data for "Elevated Social Media Presence with Paid Ads" bar chart
        const socialAdsData = {
            labels: ['Social Media Impressions Boost', 'Social Media Activity Growth'].map(l => wrapText(l)),
            datasets: [{
                label: 'Percentage Increase (Illustrative)',
                data: [120, 80], // Illustrative percentage increases
                backgroundColor: '#FFD166',
                borderColor: '#FFE399',
                borderWidth: 2,
                borderRadius: 5
            }]
        };
        new Chart(document.getElementById('socialAdsChart'), {
            type: 'bar',
            data: socialAdsData,
            options: {
                ...chartOptionsCallbacks,
                indexAxis: 'y',
                scales: {
                    x: {
                        ticks: { color: 'white', callback: function(value) { return value + '%'; } },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    },
                    y: {
                        ticks: { color: 'white' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                }
            }
        });

        // Data for "Engaging Content Strategy" bar chart
        const contentEngagementData = {
            labels: ['Average Engagement Rate', 'Email Open Rate'].map(l => wrapText(l)),
            datasets: [{
                label: 'Percentage (Illustrative)',
                data: [12, 30], // Illustrative percentages
                backgroundColor: ['#06D6A0', '#6EFFD8'],
                borderColor: '#FFFFFF',
                borderWidth: 2,
                borderRadius: 5,
            }]
        };
        new Chart(document.getElementById('contentEngagementChart'), {
            type: 'bar',
            data: contentEngagementData,
            options: {
                ...chartOptionsCallbacks,
                scales: {
                    x: {
                        ticks: { color: 'white', callback: function(value) { return value + '%'; } },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: { color: 'white' },
                        grid: { color: 'rgba(255, 255, 255, 0.1)' }
                    }
                }
            }
        });
    </script>
